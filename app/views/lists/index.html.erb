<%# Index Banner %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/evlkOfkQ5rE);">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <p>Classic</p>
  </div>
</div>

<div class="container mb-5">

  <div class="row px-3 my-5 d-flex justify-content-between">
    <h2>My lists</h2>
    <%= link_to 'Create a movie list', new_list_path, class: "btn btn-flat" %>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>');">
        <%= link_to list.name, list_path(list), class: "my-card" %>
      </div>
    <% end %>
  </div>
</div>
